/* title */
.title,
.img-title {
  line-height: 90rpx;
  padding-left: 20rpx;
  font-size: 33rpx;
  color: #bbb;
}

/* feedback-box */
.feedback-box {
  display: -webkit-flex;
  display: flex;
  justify-content: flex-end;
  width: 100%;
  padding: 10rpx 0;
  border-top: 1rpx solid #eee;
  border-bottom: 1rpx solid #eee;
  background-color: #fff;
}
textarea {
  min-width: 98%;
  font-size: 35rpx;
  background-color: #fff;
}

/* img-box */
.img-box {
  display: -webkit-flex;
  display: flex;
  justify-content: flex-start;
  padding: 30rpx 20rpx;
  border-top: 1rpx solid #eee;
  border-bottom: 1rpx solid #eee;
  background-color: #fff;
}
.select-icon {
  width: 100rpx;
  height: 100rpx;
  border: 3rpx solid #ccc;
  text-align: center;
  font-size: 70rpx;
  color: #ccc;
}
.select-hover {
  background-color: #eee;
}

/* submit-btn-box */
.submit-btn-box {
  display: -webkit-flex;
  display: flex;
  justify-content: center;
  margin: 40rpx 0;
}
.submit-btn {
  width: 90%;
  line-height: 100rpx;
  color: #fff;
  background-color: #09ba07;
}

/* show-msg-box */
.show-msg-box {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99;
  width: 100%;
  height: 100%;
}
.msg {
  position: fixed;
  top: 300rpx;
  left: 50%;
  z-index: 999;
  width: 50%;
  margin-left: -25%;
  padding: 20rpx;
  border-radius: 15rpx;
  word-break: break-all;
  font-size: 32rpx;
  text-align: center;
  color: #fff;
  background-color: rgba(0, 0, 0, 0.6);
}
