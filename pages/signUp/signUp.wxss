/**index.wxss**/
/* logo */
.logo-box {
  margin: 100rpx;
  display: -webkit-flex;
  display: flex;
  justify-content: center;
}
.logo {
  width: 150rpx;
  height: 150rpx;
}

/* info-box */
.phone-info-box view,
.user-info-box view,
.user-info-box navigator,
.phone-info-box input,
.user-info-box input {
  line-height: 96rpx;
  font-size: 35rpx;
}
.phone-info-box input,
.user-info-box input {
  height: 96rpx;
  padding-left: 10rpx;
}
.phone-info-box,
.user-info-box {
  padding-left: 20rpx;
  background-color: #fff;
}

/* phone-info-box */
.phone-info-box {
  border-bottom: 1rpx solid #eee;
  margin-bottom: 10rpx;
}
.phone-box {
  border-bottom: 1rpx solid #eee;
  display: -webkit-flex;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}
.phone-info-box .item {
  width: 18%;
}
.phone-number {
  border-left: 1rpx solid #eee;
}
