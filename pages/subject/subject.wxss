/* cur-subject */
.cur-subject-box {
  display: -webkit-flex;
  display: flex;
  width: 100%;
  margin: 70rpx 0 20rpx 0;
  border-top: 1rpx solid #ddd;
  border-bottom: 1rpx solid #ddd;
  line-height: 95rpx;
  background-color: #fff;
}
.cur-subject-text {
  width: 30%;
  padding-left: 15rpx;
  color: #999;
}
.cur-subject {
  width: 40%;
  text-align: center;
  font-size: 40rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.change {
  display: -webkit-flex;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  width: 30%;
  padding-right: 30rpx;
  color: #999;
  text-align: right;
}
view.select-icon {
  width: 20rpx;
  height: 20rpx;
  border-top: 4rpx solid #999;
  border-right: 4rpx solid #999;
  -webkit-transform: rotate(45deg);
  transform: rotate(45deg);
}
.change-hover {
  background-color: #eee;
  opacity: 0.7;
}

/* test-info-box */
.test-info-box {
  display: -webkit-flex;
  display: flex;
  justify-content: center;
  border-top: 1rpx solid #ddd;
  border-bottom: 1rpx solid #ddd;
  background-color: #fff;
}
.test-info-box view {
  display: -webkit-flex;
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 33.3%;
  padding: 35rpx 0 35rpx 0;
  text-align: center;
}
.test-info-box view text.count {
  display: block;
  color: #ef061c;
}
.test-info-box image {
  display: block;
  margin: 10rpx auto;
  width: 85rpx;
  height: 85rpx;
}

/* test-question-btn-box */
.test-question-btn-box {
  display: -webkit-flex;
  display: flex;
  justify-content: center;
  margin: 200rpx 0 100rpx 0;
}
.begin-test-question-btn {
  width: 90%;
  line-height: 100rpx;
  color: #fff;
  background-color: #09ba07;
}
/* show-msg-box */
.show-msg-box {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99;
  width: 100%;
  height: 100%;
}
.msg {
  position: fixed;
  top: 300rpx;
  left: 50%;
  z-index: 999;
  width: 50%;
  margin-left: -25%;
  padding: 20rpx;
  border-radius: 15rpx;
  word-break: break-all;
  font-size: 32rpx;
  text-align: center;
  color: #fff;
  background-color: rgba(0, 0, 0, 0.6);
}
